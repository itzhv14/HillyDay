<%- include ("../partials/header") %>
	<div class="col">
		<h1 style="text-align: center;">Edit <%= place.name %></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/places/<%= place._id %>?_method=PUT" method="POST">
				<div class="form-group"> 
					<input class="form-control" type="text" value="<%=place.name %>" name="place[name]">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%= place.image %>" name="place[image]">
				</div>
				<div class="form-group" >
				<input class="form-control" type="number" style = "padding-left: 10px;" value="<%=place.price %>" name="place[price]" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" value="<%=place.description %>" name="place[description]">
				</div>
				<div class="form-group">
   					 <input class="form-control" value="<%= place.location %>" name="location" id="location" placeholder="Add Location">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/places">Go Back</a>
		</div>
	</div>
<%- include ("../partials/footer") %>