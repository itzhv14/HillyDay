<%- include ("../partials/header") %>
	<div class="col">
		<h1 style="text-align: center;">Create a new Place</h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/places" method="POST">
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Name" name="name">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Image URL" name="image">
				</div>
				<div class="form-group">
					<input class="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01">
				</div>
				<div class="form-group">
					<input class="form-control" type="text" placeholder="Description" name="description">
				</div>
				<div class="form-group">
    				<input class="form-control" type="text" name="location" id="location" placeholder="Location">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/places">Go Back</a>
		</div>
	</div>
<%- include ("../partials/footer") %>