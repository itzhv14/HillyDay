<%- include ("../partials/header") %>
    <div class="col">
        <h1 style="text-align: center;">Add New Comment to <%= place.name %> </h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/places/<%= place._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" placeholder="Comment" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/places">Go Back</a>
        </div>
    </div>
<%- include ("../partials/footer") %>